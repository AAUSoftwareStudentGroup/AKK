<script src="js/navigation-menu.js"></script>
<div class="header">
    <div class="header-content">
        {{#if_eq returnPath null}}
        {{else}}
        <a class="header-button left prev-button" href="{{returnPath}}">
            <svg width="32" height="32" viewBox="0 0 24 24"  xmlns="http://www.w3.org/2000/svg" fill="#FFFFFF">
                <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
            </svg>
        </a>
        {{/if_eq}}
        <h1 class="page-title">{{title}}</h1>
        <span class="header-button right nav-menu-toggle">
            <div class="transitioning-icon">
                <span class="first"></span>
                <span class="second"></span>
                <span class="third"></span>
            </div>
        </span>
    </div>
    <div class="progress header-loading-bar hidden">
        <div class="indeterminate"></div>
    </div>
</div>
<span class="nav-menu" id="navigationid">
    <a href="/">Home</a>
    {{#if isAdmin}}
    <a href="admin-panel">Admin Panel</a>
    {{/if}}
    {{#if isAuthenticated}}
       <a href="new-route">Add Route</a>
       <span onclick="headerViewModel.cookieService.expireToken()"> <a href="/">Log out</a></span>
    {{else}}
        <a href="/login">Log In</a>
    {{/if}}
</span>
<span class="nav-menu-closer"></span>
