<script src="js/templates/header-template.js"></script>
<div class="header">
    <div class="header-content">
        <a class="header-button left prev-button" onclick="window.history.back();">
            <svg width="32" height="32" viewBox="0 0 24 24"  xmlns="http://www.w3.org/2000/svg" fill="#FFFFFF">
                <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
