<div class="content-section section-picker">
    <h2>Grades</h2>
    <div class="radio-inputs">
        {{#each grades}}
        <input id="grade-input-{{difficulty}}" class="grade-box" onclick="viewModel.changeGrade({{difficulty}})" name="grade" type="radio">
        <label class="grade-{{difficulty}}" for="grade-input-{{difficulty}}" style="background-color: rgb({{color.r}},{{color.g}},{{color.b}})">
            <svg class="grade-checkmark" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
                 {{#ifCond color 200}}
                 fill="#FFFFFF">
                {{else}}
                fill="#222222">
                {{/ifCond}}
                <polygon points="8.9999939 16.2 4.7999939 12 3.3999939 13.4 8.9999939 19 20.9999939 7 19.5999939 5.6"></polygon>
            </svg>
        </label>
        {{/each}}
    </div>
    <div class="button-group">
        <input class="submit-button positive" id="grade-input-new" type="button" onclick="viewModel.addNewGrade()" value="Add grade">
        <input class="submit-button neutral" type="button" onclick="viewModel.renameSection()" value="Rename grade">
    </div>
    <div class="button-group">
        <input class="submit-button negative" type="button" onclick="viewModel.clearSection()" value="Clear routes">
        <input class="submit-button negative" type="button" onclick="viewModel.deleteGrade('{{selectedGrade.difficulty}}')" value="Delete grade">
    </div>
</div>