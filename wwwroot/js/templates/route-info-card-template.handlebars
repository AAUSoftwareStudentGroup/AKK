                        <g>
                            <circle r="11.7" cy="57.25" cx="90.6" fill="#E6E7E8"></circle>
                            <circle r="7.8" cy="57.25" cx="90.6" fill="#414042"></circle>
                        </g>
                    </g>
                </svg>
            </div>
            <div class="clear"></div>
        </div>  
        <div class="route-card-bottom">
            <div class="by-line">
                <span class="route-author">Made by: {{route.author}}</span>
                <span class="route-date">{{route.date}}</span>
            </div>
            <div class="route-rating {{#if_eq hasRated true}}rated{{/if_eq}}">
                {{#times filledStars}}
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                    </svg>
                {{/times}}
                {{#times emptyStars}}
                    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path d="M22 9.24l-7.19-.62L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21 12 17.27 18.18 21l-1.63-7.03L22 9.24zM12 15.4l-3.76 2.27 1-4.28-3.32-2.88 4.38-.38L12 6.1l1.71 4.04 4.38.38-3.32 2.88 1 4.28L12 15.4z"/>
                    </svg>
                {{/times}}
            </div>
            <div class="clear"></div>
        </div>
        <div class="route-card-content">
            {{#if_eq hasImage true}}
            <div class="route-image small" id="routeimagecontainer">
                <canvas id="routeimage" class="route-canvas" width="{{route.image.width}}" height="{{route.image.height}}">canvas not supported</canvas>
                <svg class="image-overlay" viewBox="0 0 24 24">
                    <path fill="#000000" d="M10,21V19H6.41L10.91,14.5L9.5,13.09L5,17.59V14H3V21H10M14.5,10.91L19,6.41V10H21V3H14V5H17.59L13.09,9.5L14.5,10.91Z" />
                </svg>
            </div>
            {{else}}
                <div class="route-image no-image-added small" onclick="viewModel.editRoute()">
                    <svg width="64" height="64" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="#000000">
                        <circle cx="12" cy="12" r="3.2"/>
                        <path d="M9 2L7.17 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2h-3.17L15 2H9zm3 15c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5z"/>
                    </svg>
                    <div id="image-placeholder-text"><p>Click to add image</p></div>
                </div>
            {{/if_eq}}
            <p class="note">{{route.note}} </p>
            <div class="clear"></div>
        </div>
    </div>
    {{#if isAuthed}}
    <input class="submit-button negative left" type="button" onclick="viewModel.deleteRoute()" value="Delete"></input>
    {{/if}}
    <input class="submit-button neutral right" type="button" onclick="viewModel.editRoute()" value="Edit"></input>
</div>