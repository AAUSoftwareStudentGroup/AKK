<div class="content-section grade-picker">
    <h2>Grade</h2>
    <div class="radio-inputs">
        {{#each grades}}
        <input id="grade-input-{{id}}" class="grade-box" onclick="viewModel.changeGrade('{{id}}')" name="grade" type="radio" {{#if_eq ../selectedGrade.id id}} checked {{/if_eq}}>
        <label for="grade-input-{{id}}" style="background-color: rgb({{color.r}},{{color.g}},{{color.b}})">
            <svg class="grade-checkmark" viewbox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"
                    {{#ifCond color 200}}
                    fill="#FFFFFF">
                {{else}}
                fill="#222222">
                {{/ifCond}}
                <polygon points="8.9999939 16.2 4.7999939 12 3.3999939 13.4 8.9999939 19 20.9999939 7 19.5999939 5.6"></polygon>
            </svg>
        </label>
        {{/each}}
        <div class="stretch"></div>
    </div>
</div>